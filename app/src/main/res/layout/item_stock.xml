<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <RelativeLayout
        android:id="@+id/backgroundCardView"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/tikerTextView"
            android:layout_width="54dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/imageView"
            android:lineHeight="24dp"
            android:text="AAPL"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:textStyle="normal">

        </TextView>

        <TextView
            android:id="@+id/full_nameTextView"
            android:width="75dp"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="38dp"
            android:layout_toEndOf="@+id/imageView"
            android:lineHeight="16dp"
            android:text="Apple Ink"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12dp"
            android:textStyle="normal">

        </TextView>

        <TextView
            android:id="@+id/priceTextView"
            android:width="88dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="17dp"
            android:lineHeight="24dp"
            android:text="$ 135,37"
            android:textColor="#1A1A1A"
            android:textSize="18dp"
            android:textStyle="normal">

        </TextView>

        <TextView
            android:id="@+id/changesTextView"
            android:width="75dp"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="12dp"
            android:lineHeight="16dp"
            android:text="+0,24 (1,24%)"
            android:textColor="#24B25D"
            android:textSize="12dp"
            android:textStyle="normal">

        </TextView>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/drawable_1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/tikerTextView"
            app:srcCompat="@drawable/star" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>